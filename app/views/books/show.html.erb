<h3><%=@book.title %> -<%=@book.author.name %> </h3>

<h4>Reviews:</h4>
<% @reviews.each do |review| %>
<ul>
<li><%=review.content%><br /> Rating: <%= review.rating%>&nbsp; &nbsp; &nbsp; &nbsp;   By: <%=review.user.name %></li>
</ul>
<% end %>

<hr />
<h3>Add a Review:</h3>
<form action="reviews/<%=@book.id%>/create" method="post">
  Review: <br /><textarea name= "review" rows="4" cols="50"></textarea><br />
  Rating: <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select><br />
  <input type="Submit" name="" value="Submit">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
</form>
